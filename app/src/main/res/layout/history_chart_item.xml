<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@color/transparent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="20dp"
        android:background="@color/transparent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="11sp"
            android:background="@color/transparent"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/bar"
            android:layout_width="8dp"
            android:layout_height="130dp"
            android:background="@drawable/char_bar"
            app:layout_constraintBottom_toTopOf="@+id/day_number"
            app:layout_constraintEnd_toEndOf="@id/day_number"
            app:layout_constraintStart_toStartOf="@+id/day_number" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>