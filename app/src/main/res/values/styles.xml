<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_secondary" parent="@style/Theme.WaterReminder">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="bottom" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:colorPrimary">@color/bottomBackground</item>
        <item name="android:background">@color/bottomBackground</item>
        <item name="android:itemBackground">@color/bottomBackground</item>
        <item name="itemTextColor">@color/bottomBackground</item>
        <item name="itemIconTint">@color/bottomBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
    </style>

    <style name="btn_dialog" parent="@style/Theme.WaterReminder">
        <item name="android:background">@color/transparent</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="btn_primary" parent="@style/Theme.WaterReminder">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">14dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="btn_history_day" parent="@style/Theme.WaterReminder">
        <item name="android:background">@drawable/btn_next_month</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">14dp</item>
    </style>

    <style name="small_btn" parent="@style/Theme.WaterReminder">
        <item name="android:background">@color/transparent</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="alertDialog" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColorPrimary">?attr/colorSecondary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/btn_dialog</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/btn_dialog</item>
    </style>



    <style name="textInWhiteBackground">
        <item name="android:textColor">@color/bluePrimary</item>
    </style>

    <style name="MyTimePickerWidgetStyle" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:headerBackground">@color/background</item>
        <item name="android:numbersTextColor">?attr/colorOnBackground</item>
        <item name="android:numbersInnerTextColor">?attr/colorOnBackground</item>
        <item name="android:textColorPrimary">@color/bottomBackground</item>
        <item name="android:numbersSelectorColor">?attr/colorPrimary</item>
        <item name="android:numbersBackgroundColor">@color/transparent</item>
        <item name="android:textColor">@color/bottomBackground</item>
    </style>

    <style name="MyTimePickerWidgetStyleDisplay" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/bottomBackground</item>
    </style>

</resources>